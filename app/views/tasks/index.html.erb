<div class="container">
<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <% if task.completed %>
    <p>
        <input type="checkbox" name="complete">
        <%= link_to task.title, show_path(task) %>
        <%= link_to delete_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash"></i>
        <% end %>
    </p>
  <% else %>
    <p>
      <input type="checkbox" name="vehicle1" value="Bike">
      <%= link_to task.title, show_path(task) %>
      <%= link_to delete_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-trash"></i>
   <% end %>
    </p>
  <% end %>

<% end %>
<%= link_to "Add a task", tasks_new_path %>
</div>
